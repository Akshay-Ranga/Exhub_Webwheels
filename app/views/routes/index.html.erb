<p id="notice"><%= notice %></p>

<h1>Routes</h1>

<table>
  <thead>
    <tr>
      <th>From location</th>
      <th>To location</th>
      <th>Bus</th>
      <th>Fare</th>
      <th>Route time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.from_location %></td>
        <td><%= route.to_location %></td>
        <td><%= route.bus_id %></td>
        <td><%= route.fare %></td>
        <td><%= route.route_time %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

