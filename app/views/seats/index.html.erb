<p id="notice"><%= notice %></p>

<h1>Seats</h1>

<table>
  <thead>
    <tr>
      <th>Avail seats</th>
      <th>Unavail seats</th>
      <th>S dtime</th>
      <th>Route</th>
      <th>Bus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seats.each do |seat| %>
      <tr>
        <td><%= seat.avail_seats %></td>
        <td><%= seat.unavail_seats %></td>
        <td><%= seat.s_dtime %></td>
        <td><%= seat.route_id %></td>
        <td><%= seat.bus_id %></td>
        <td><%= link_to 'Show', seat %></td>
        <td><%= link_to 'Edit', edit_seat_path(seat) %></td>
        <td><%= link_to 'Destroy', seat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

