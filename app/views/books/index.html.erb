<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Login</th>
      <th><span style = "padding-left:68px">Pick Up Location</span></th>
      <th><span style = "padding-left:68px">Drop Location</span></th>
      <th><span style = "padding-left:68px">No tickets</span></th>
      <th><span style = "padding-left:68px">Phone no</span></th>
      <th><span style = "padding-left:68px">Email</span></th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= Login.find(book.login_id).user_name %>
        </td>
        <td><span style = "padding-left:68px"><%= Route.find(book.route_id).from_location %></span></td>
        <td><span style = "padding-left:68px"><%= Route.find(book.route_id).to_location %></span></td>
        <td><span style = "padding-left:68px"><%= book.no_tickets %></span></td>
        <td><span style = "padding-left:68px"><%= book.phone_no %></span></td>
        <td><span style = "padding-left:68px"><%= book.email %></span></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Book Now', new_book_path %>
