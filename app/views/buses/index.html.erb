<p id="notice"><%= notice %></p>

<h1>Buses</h1>

<table>
  <thead>
    <tr>
      <th><span style = "padding-left:68px">Bus type</span></th>
      <th><span style = "padding-left:68px">Bus seats</span></th>
      <th><span style = "padding-left:68px">Description</span></th>
      <th><span style = "padding-left:68px">Bus operator</span></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buses.each do |bus| %>
      <tr>
        <td><span style = "padding-left:68px"><%= bus.bus_type %></span></td>
        <td><span style = "padding-left:68px"><%= bus.bus_seats %></span></td>
        <td><span style = "padding-left:68px"><%= bus.description %></span></td>
        <td><span style = "padding-left:68px"><%= bus.bus_operator %></span></td>
        <td><span style = "padding-left:68px"><%= link_to 'Show', bus %></span></td>
        <td><%= link_to 'Edit', edit_bus_path(bus) %></td>
        <td><%= link_to 'Destroy', bus, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

