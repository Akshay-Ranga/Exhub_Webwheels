<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Login</th>
      <th>Route</th>
      <th>No tickets</th>
      <th>Phone no</th>
      <th>Email</th>
      <th>Total fare</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.login_id %></td>
        <td><%= book.route_id %></td>
        <td><%= book.no_tickets %></td>
        <td><%= book.phone_no %></td>
        <td><%= book.email %></td>
        <td><%= book.total_fare %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

